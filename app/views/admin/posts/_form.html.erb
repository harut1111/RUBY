<div class="container">
	
	<div class="row">
		<div class="col-md-10 mx-auto">
			<%= form_for [:admin,@post] do |f| %>
			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= f.label :content %>
				<%= f.rich_text_area :content, class: 'form-control' %>
			</div>
			<div class="form-group">
				
				<%= f.submit class: 'btn btn-primary' %>
			</div>
			<% end %>
		</div>

	</div>
</div>